syntax = "v1"

info (
	title:  "用户服务的实例对象"
	author: "zxm"
)

import (
	"domain.api"
)

@server (
	perfix: v1/user
	group:  user
)
service user {
	@doc "用户注册"
	@handler register
	post /register (RegisterReq) returns (RegisterResp)

	@doc "用户登录"
	@handler login
	post /login (LoginReq) returns (LoginResp)
}

@server (
	prefix: v1/user
	group:  user
	jwt:    JwtAuth
)
service user {
	@doc "用户用户信息"
	@handler detail
	get /user (UserInfoReq) returns (UserInfoResp)
}

